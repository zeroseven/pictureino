{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/*": ["./Resources/Private/JavaScript/*"],
			"@backend/*": ["./Resources/Private/JavaScript/backend/*"]
		},
	},
	"include": [
		"Resources/Private/JavaScript/**/*.ts",
		"Resources/Private/JavaScript/types/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
